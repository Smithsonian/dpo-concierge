{
  "name": "dpo-concierge",
  "version": "0.1.0",
  "description": "Migration Workflow Management Tool",
  "main": "index.js",
  "scripts": {
    "start": "npm run api",
    "api": "nodemon services/api/bin/index.js",
    "watch": "APP_VERSION=$(git describe --tags); concurrently \"cd source/client; webpack --watch --mode=development --app=concierge --vers=$APP_VERSION\" \"tsc -b source/api -w\" \"nodemon services/api/bin/index.js\"",
    "build": "concurrently \"npm run build-api\" \"npm run build-dev\"",
    "build-api": "tsc -b source/api",
    "build-dev": "APP_VERSION=$(git describe --tags); cd source/client; webpack --mode=development --app=concierge --vers=$APP_VERSION; cd ../..",
    "build-prod": "APP_VERSION=$(git describe --tags); cd source/client; webpack --mode=production --app=concierge --vers=$APP_VERSION; cd../..",
    "test": "echo \"Error: no test specified\" && exit 1",
    "up": "docker-compose up -d; docker-compose logs -f",
    "down": "docker-compose stop; docker-compose rm -f -v",
    "restart": "docker-compose stop; docker-compose rm -f -v; docker-compose up -d; docker-compose logs -f",
    "bash": "docker-compose exec api bash"
  },
  "nodemonConfig": {
    "delay": 1000,
    "watch": [
      "services/api/bin"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Smithsonian/dpo-concierge.git"
  },
  "contributors": [
    {
      "name": "Ralph Wiedemeier",
      "url": "https://github.com/framelab"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Smithsonian/dpo-concierge/issues"
  },
  "homepage": "https://github.com/Smithsonian/dpo-concierge#readme",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "dataloader-sequelize": "^2.0.1",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-session": "^1.16.2",
    "graphql": "^14.4.2",
    "graphql-sequelize": "^9.3.6",
    "graphql-upload": "^8.0.7",
    "mariadb": "^2.1.0",
    "memorystore": "^1.6.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-ldapauth": "^2.1.3",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.15.1",
    "sequelize-typescript": "^1.0.0-beta.4",
    "source-map-support": "^0.5.13",
    "type-graphql": "^0.17.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/express": "^4.17.0",
    "@types/graphql": "^14.2.3",
    "@types/node": "^12.7.2",
    "@types/validator": "^10.11.2",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.2.0",
    "concurrently": "^4.1.1",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "nodemon": "^1.19.1",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "raw-loader": "^3.1.0",
    "sass-loader": "^7.2.0",
    "source-map-loader": "^0.2.4",
    "terser-webpack-plugin": "^1.4.1",
    "typescript": "^3.5.3",
    "typedoc": "^0.15.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6"
  }
}
