{
  "name": "dpo-concierge",
  "version": "0.1.0",
  "description": "Migration Workflow Management Tool",
  "scripts": {
    "start": "npm run api",
    "api": "nodemon services/api/bin/index.js",
    "watch": "concurrently --raw --no-color \"cd source/client; webpack --watch --mode=development --app=all; cd ../..\" \"tsc -b source/api -w\" \"nodemon services/api/bin/index.js\"",
    "build": "concurrently \"npm run build-api\" \"npm run build-dev\"",
    "build-api": "tsc -b source/api",
    "build-dev": "cd source/client; webpack --mode=development --app=all; cd ../..",
    "build-prod": "cd source/client; webpack --mode=production --app=all; cd../..",
    "clean": "cd services/api && rm -rf bin && mkdir bin && cd ../..",
    "clean-models": "cd services/api/bin && rm -rf models && cd ../../..",
    "test": "echo \"Error: no test specified\" && exit 1",
    "up": "docker-compose up -d; docker-compose logs -f",
    "down": "docker-compose stop; docker-compose rm -f -v",
    "restart": "docker-compose stop; docker-compose rm -f -v; docker-compose up -d; docker-compose logs -f",
    "bash": "docker-compose exec api bash"
  },
  "nodemonConfig": {
    "delay": 1000,
    "watch": [
      "services/api/bin"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Smithsonian/dpo-concierge.git"
  },
  "contributors": [
    {
      "name": "Ralph Wiedemeier",
      "url": "https://github.com/framelab"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Smithsonian/dpo-concierge/issues"
  },
  "homepage": "https://github.com/Smithsonian/dpo-concierge#readme",
  "dependencies": {
    "ajv": "^6.10.2",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "dataloader-sequelize": "^2.0.1",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-session": "^1.16.2",
    "google-spreadsheet": "^2.0.8",
    "graphql": "^14.5.8",
    "graphql-relay": "^0.6.0",
    "graphql-sequelize": "^9.3.6",
    "graphql-upload": "^8.0.7",
    "mariadb": "^2.1.1",
    "memorystore": "^1.6.1",
    "mime": "^2.4.4",
    "mkdirp": "^0.5.1",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.0",
    "passport": "^0.4.0",
    "passport-ldapauth": "^2.1.3",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.19.1",
    "sequelize-typescript": "^1.0.0",
    "source-map-support": "^0.5.13",
    "type-graphql": "^0.17.5",
    "typedi": "^0.8.0",
    "uuidv4": "^5.0.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/express": "^4.17.1",
    "@types/graphql": "^14.5.0",
    "@types/node": "^12.7.8",
    "@types/validator": "^10.11.3",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.1.2",
    "css-loader": "^3.2.0",
    "dotenv": "^8.1.0",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "raw-loader": "^3.1.0",
    "sass-loader": "^8.0.0",
    "source-map-loader": "^0.2.4",
    "terser-webpack-plugin": "^2.1.2",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  }
}
